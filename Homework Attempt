#include <iostream>
#include <string>
#include <fstream>
#include <iomanip>
using namespace std;

struct WordCount
{
	string word;
	int count;
};

int main()
{
	const int SIZE = 268;
	WordCount arr[SIZE];
	WordCount item;

	ifstream input;
	input.open("C:\\Users\\Student\\Desktop\\LAB.11.2.2016\\text.txt");

	arr[SIZE].count = 0;
	for (int i = 0; i < SIZE; i++)
	{
		input >> item.word;
		item.count = 1;
		arr[i] = item;
	}

	//Bubble Sorting the Array
	for (int i = 1; i < SIZE; i++)
	{
		for (int j = SIZE - 1; j >= i; j--)
		{
			if (arr[j].word < arr[j-1].word)
			{
				swap(arr[j].word, arr[j - 1].word);
			}
		}
	}

	//Accumulating Like Words
	for (int i = SIZE - 1; i >= 0; i--)
	{
		for (int j = 1; (i - j) > 0; j++)
		{
			if (arr[i].word == arr[i - j].word)
			{
				if (arr[i].word != "")
				{
					arr[i].count++;
				}
				arr[i - j].word = "";
				arr[i - j].count = 0;
			}
			else
			{
				break;
			}
		}
	}
	
	//Displaying the Sorted Array
	cout << "Array Content..." << endl;
	for (int i = 0; i < SIZE; i++)
	{
		cout << left << setw(10) << arr[i].word;
		if (arr[i].count != 0)
		{
			cout << "\tCount = " << arr[i].count;
		}
		cout << endl;
	}
	cout << "Word Count: " << arr[SIZE].count << endl;

	input.close();

	return 0;
}
